<!DOCTYPE html>
<html>
<head>
  <title>Slit</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">Slit</a>
        <div class="nav-collapse">
          <ul class="nav">
            <% if user_signed_in? %>
              <li class="<%= 'active' if params[:controller] == 'repositories' %>">
                <%= link_to 'Git', "/#{current_user.name}" %>
              </li>
            <% else %>
              <li class="<%= 'active' if params[:controller] == 'home' %>">
                <%= link_to 'Git', "/" %>
              </li>
            <% end %>
            <li><a href="http://blog.jbussdieker.com">Blog</a></li>
            <li><a href="http://wiki.jbussdieker.com">Wiki</a></li>
            <li>
            <% unless user_signed_in? %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
            </li>
          </ul>
        </div>
        <% if user_signed_in? %>
        <div class="btn-group pull-right">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i> <%= current_user.email %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to('Profile', edit_user_registration_path) %></li>
            <li><%= link_to 'Keys', keys_path %></li>
            <li class="divider"></li>
            <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>

