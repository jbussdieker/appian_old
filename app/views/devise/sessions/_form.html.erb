  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email, class: "hidden" %>
    <%= f.email_field :email, class: "required", placeholder: "Email" %></div>

    <div><%= f.label :password, class: "hidden" %>
    <%= f.password_field :password, class: "required", placeholder: "password" %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "radioLabel" %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
  <% end %>
